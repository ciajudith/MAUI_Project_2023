<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="MAUI_Project_2023.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:MAUI_Project_2023.Views"
	xmlns:local="clr-namespace:MAUI_Project_2023"
	BackgroundColor="Transparent"
    ForegroundColor="#4552CB"
    TitleColor="#4552CB"
    DisabledColor="#B4FFFFFF"
    UnselectedColor="#95FFFFFF"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundImage="loader.png"
 FlyoutBackgroundImageAspect="AspectFill">

		<Shell.FlyoutHeader HeightRequest="200">
		<Grid Padding="20" 
				IsClippedToBounds="True">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="*"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>

			<Frame
				BackgroundColor="Transparent"
				BorderColor="Transparent"
				Grid.Column="0"
				Grid.Row="0"
				HeightRequest="50">

			</Frame>
			<Frame Grid.Column="0" 
					Grid.Row="2"
					WidthRequest="100" 
					HeightRequest="100" 
					CornerRadius="50"
					Padding="0" 
					BackgroundColor="White">

				<Image Source="pp.jpg" 
						Aspect="AspectFill" />
			</Frame>
			<StackLayout 
				VerticalOptions="Center"
				Grid.Column="1" 
				Grid.Row="2"
				Margin="30,0,0,0">
				<Label 
					x:Name="usrnm"
                    Text=""
					TextColor="White"
                    FontFamily="poppSemiBold"
					FontSize="24" />
				<Label 
                    x:Name="maill"
					Text="" 
					TextColor="White" 
                    FontFamily="poppSemiBold"
					FontSize="12" />
			</StackLayout>
			<Frame
				BorderColor="Transparent"
				BackgroundColor="Transparent"
				Grid.Column="0"
				Grid.Row="1"
				HeightRequest="50">

			</Frame>

		</Grid>
	</Shell.FlyoutHeader>

    <ShellContent
